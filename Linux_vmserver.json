{
   "$schema":"https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
   "contentVersion":"1.0.0.0",
   "parameters":{
      "location":{
         "type":"string",
         "defaultValue":"[resourceGroup().location]"
      },
      "storageAccountName":{
         "type":"string",
         "defaultValue":"scoreplussa"
      },
      "virtualNetworkName":{
         "type":"string",
         "defaultValue":"vnet"
      },
      "adminUsername": {
         "type": "string",
         "metadata": {
         "description": "Username for the Virtual Machine."
         }
      },
      "adminPasswordOrKey": {
         "type": "securestring",
         "metadata": {
         "description": "SSH Key or password for the Virtual Machine. SSH key is recommended."
         }
      },
      "appGatewayPrefix":{
         "type":"string",
         "defaultValue":"app-gtw",
         "metadata":{
            "description":"App Gateway Prefix used for app gateway specific resources"
         }
      },
      "webPrefix":{
         "type":"string",
         "defaultValue":"web",
         "metadata":{
            "description":"Prefix used for web specific resources"
         }
      },
      "analyticsPrefix":{
         "type":"string",
         "defaultValue":"analytics",
         "metadata":{
            "description":"Prefix used for analytics specific resources"
         }
      },
       "BastionPrefix":{
         "type":"string",
         "defaultValue":"bastion",
         "metadata":{
            "description":"Prefix used for bastion specific resources"
         }
      },
       "sftpPrefix":{
         "type":"string",
         "defaultValue":"sftp-config",
         "metadata":{
            "description":"Prefix used for sftp specific resources"
         }
      },
       "dataIntegrationPrefix":{
         "type":"string",
         "defaultValue":"data-integration",
         "metadata":{
            "description":"Prefix used for data integration specific resources"
         }
      },
       "appPrefix":{
         "type":"string",
         "defaultValue":"app",
         "metadata":{
            "description":"Prefix used for app  specific resources"
         }
      },
       "DBPrefix":{
         "type":"string",
         "defaultValue":"db",
         "metadata":{
            "description":"Prefix used for db specific resources"
         }
      },
       "IamConfigPrefix":{
         "type":"string",
         "defaultValue":"iam-config",
         "metadata":{
            "description":"Prefix used for iam config specific resources"
         }
      },
      "vmConfiguration":{
         "type":"array",
         "defaultValue":[
             {
               "vm_Name":"web",
               "virtualMachineSize":"Standard_D4s_v4",
               "subnetName":"web-subnet",
               "networkInterfaceName":"web",
               "networkSecurityGroupName":"[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', concat(parameters('webPrefix'),'-nsg'))]",
               "osDiskType":"StandardSSD_LRS",
               "publisher":"MicrosoftWindowsServer",
               "offer":"WindowsServer",
               "sku":"2016-Datacenter",
               "version":"latest",
               "authenticationType":"password",
               "NumberOfDisk":2,
               "DataDisk1sku":"StandardSSD_LRS",
               "DataDisk1SizeGB":128,
               "DataDisk2sku":"Standard_LRS",
               "DataDisk2SizeGB":128
            },
            {
               "vm_Name":"app",
               "virtualMachineSize":"Standard_D4s_v4",
               "subnetName":"app-subnet",
               "networkInterfaceName":"app",
               "networkSecurityGroupName":"[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', 'appnsg')]",
               "osDiskType":"StandardSSD_LRS",
               "publisher":"MicrosoftWindowsServer",
               "offer":"WindowsServer",
               "sku":"2016-Datacenter",
               "version":"latest",
               "authenticationType":"password",
               "NumberOfDisk":2,
               "DataDisk1sku":"StandardSSD_LRS",
               "DataDisk1SizeGB":128,
               "DataDisk2sku":"Standard_LRS",
               "DataDisk2SizeGB":128
            },
            {
               "vm_Name":"db",
               "virtualMachineSize":"Standard_D4s_v4",
               "subnetName":"db-subnet",
               "networkInterfaceName":"db",
               "networkSecurityGroupName":"[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', 'db-nsg')]",
               "osDiskType":"StandardSSD_LRS",
               "publisher":"MicrosoftWindowsServer",
               "offer":"WindowsServer",
               "sku":"2016-Datacenter",
               "version":"latest",
               "authenticationType":"password",
               "NumberOfDisk":2,
               "DataDisk1sku":"StandardSSD_LRS",
               "DataDisk1SizeGB":128,
               "DataDisk2sku":"StandardSSD_LRS",
               "DataDisk2SizeGB":512
            },
            {
               "vm_Name":"analytics",
               "virtualMachineSize":"Standard_D4s_v4",
               "subnetName":"analytics-subnet",
               "networkInterfaceName":"analytics",
               "networkSecurityGroupName":"[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', concat(parameters('analyticsPrefix'),'-nsg'))]",
               "osDiskType":"StandardSSD_LRS",
               "publisher":"MicrosoftWindowsServer",
               "offer":"WindowsServer",
               "sku":"2016-Datacenter",
               "version":"latest",
               "authenticationType":"password",
               "NumberOfDisk":2,
               "DataDisk1sku":"StandardSSD_LRS",
               "DataDisk1SizeGB":128,
               "DataDisk2sku":"StandardSSD_LRS",
               "DataDisk2SizeGB":256
            },
            {
               "vm_Name":"API-Server",
               "virtualMachineSize":"Standard_E8ds_v4",
               "subnetName":"app-subnet",
               "networkInterfaceName":"app-API-server",
               "networkSecurityGroupName":"[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', 'app-nsg')]",
               "osDiskType":"StandardSSD_LRS",
               "publisher":"OpenLogic",
               "offer":"CentOS",
               "sku":"7_9",
               "version":"latest",
               "authenticationType":"password",
               "NumberOfDisk":2,
               "DataDisk1sku":"StandardSSD_LRS",
               "DataDisk1SizeGB":128,
               "DataDisk2sku":"StandardSSD_LRS",
               "DataDisk2SizeGB":256
            },
            {
               "vm_Name":"Workflow-Document-Server",
               "virtualMachineSize":"Standard_D2s_v4",
               "subnetName":"app-subnet",
               "networkInterfaceName":"app-workflow-document",
               "networkSecurityGroupName":"[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', 'app-nsg')]",
               "osDiskType":"StandardSSD_LRS",
               "publisher":"MicrosoftWindowsServer",
               "offer":"WindowsServer",
               "sku":"2016-Datacenter",
               "version":"latest",
               "authenticationType":"password",
               "NumberOfDisk":2,
               "DataDisk1sku":"StandardSSD_LRS",
               "DataDisk1SizeGB":128,
               "DataDisk2sku":"StandardSSD_LRS",
               "DataDisk2SizeGB":128
            },
            {
               "vm_Name":"Java-Rule-Engine",
               "virtualMachineSize":"Standard_D4s_v4",
               "subnetName":"app-subnet",
               "networkInterfaceName":"app-javarule",
               "networkSecurityGroupName":"[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', 'app-nsg')]",
               "osDiskType":"StandardSSD_LRS",
               "publisher":"MicrosoftWindowsServer",
               "offer":"WindowsServer",
               "sku":"2016-Datacenter",
               "version":"latest",
               "authenticationType":"password",
               "NumberOfDisk":2,
               "DataDisk1sku":"StandardSSD_LRS",
               "DataDisk1SizeGB":128,
               "DataDisk2sku":"StandardSSD_LRS",
               "DataDisk2SizeGB":128
            },
            {
               "vm_Name":"data-integration",
               "virtualMachineSize":"Standard_D4s_v4",
               "subnetName":"data-integration-subnet",
               "networkInterfaceName":"data-integration",
               "networkSecurityGroupName":"[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', concat(parameters('dataIntegrationPrefix'),'-nsg'))]",
               "osType":"StandardSSD_LRS",
               "publisher":"MicrosoftWindowsServer",
               "offer":"WindowsServer",
               "sku":"2016-Datacenter",
               "version":"latest",
               "authenticationType":"password",
               "NumberOfDisk":2,
               "DataDisk1sku":"StandardSSD_LRS",
               "DataDisk1SizeGB":128,
               "DataDisk2sku":"StandardSSD_LRS",
               "DataDisk2SizeGB":256
            },
            {
               "vm_Name":"sftp-config",
               "virtualMachineSize":"Standard_B2ms",
               "subnetName":"sftp-config-subnet",
               "networkInterfaceName":"sftp-config",
               "networkSecurityGroupName":"[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', concat(parameters('sftpPrefix'),'-nsg'))]",
               "osDiskType":"StandardSSD_LRS",
               "publisher":"MicrosoftWindowsServer",
               "offer":"WindowsServer",
               "sku":"2016-Datacenter",
               "version":"latest",
               "authenticationType":"password",
               "NumberOfDisk":2,
               "DataDisk1sku":"StandardSSD_LRS",
               "DataDisk1SizeGB":128,
               "DataDisk2sku":"Standard_LRS",
               "DataDisk2SizeGB":128
            }
         ]
      }
   },
   "variables":{ 
     
      "linuxConfiguration":{
         "disablePasswordAuthentication": true,
         "ssh": {
         "publicKeys": [
            {
               "path": "[concat('/home/', parameters('vmConfiguration')[copyIndex()].adminUsername, '/.ssh/authorized_keys')]",
               "keyData": "[parameters('vmConfiguration')[copyIndex()].adminPasswordOrKey]"
            }
         ]
         }
      }  
      
   },
   "resources":[
      {
         "type":"Microsoft.Storage/storageAccounts",
         "apiVersion":"2019-06-01",
         "name":"[parameters('storageAccountName')]",
         "location":"[parameters('location')]",
         "sku":{
            "name":"Standard_LRS"
         },
         "kind":"Storage"
      },
      {
         "name":"[concat(parameters('vmConfiguration')[copyIndex()].vm_Name,'_DataDisk_0')]",
         "type":"Microsoft.Compute/disks",
         "apiVersion":"2019-07-01",
         "location":"[parameters('location')]",
         "sku":{
            "name":"[parameters('vmConfiguration')[copyIndex()].DataDisk1sku]"
         },
         "properties":{
            "diskSizeGB":"[parameters('vmConfiguration')[copyIndex()].DataDisk1SizeGB]",
            "creationData":{
               "createOption":"empty"
            }
         },
         "copy":{
            "name":"disk1COpy",
            "count":"[length(parameters('vmConfiguration'))]"
         }
      },
      {
         "name":"[concat(parameters('vmConfiguration')[copyIndex()].vm_Name,'_DataDisk_1')]",
         "type":"Microsoft.Compute/disks",
         "apiVersion":"2019-07-01",
         "location":"[parameters('location')]",
         "sku":{
            "name":"[parameters('vmConfiguration')[copyIndex()].DataDisk2sku]"
         },
         "properties":{
            "diskSizeGB":"[parameters('vmConfiguration')[copyIndex()].DataDisk2SizeGB]",
            "creationData":{
               "createOption":"empty"
            }
         },
         "copy":{
            "name":"disk1COpy",
            "count":"[length(parameters('vmConfiguration'))]"
         }
      },
      {
         "type":"Microsoft.Network/networkInterfaces",
         "apiVersion":"2020-04-01",
         "name":"[concat(parameters('vmConfiguration')[copyIndex()].networkInterfaceName,'-nic')]",
         "location":"[resourceGroup().location]",
         "dependsOn":[
           // "[concat('Microsoft.Network/', concat(parameters('dnsLabelPrefix'),copyIndex(1)))]"
         ],
         "properties":{
            "ipConfigurations":[
               {
                  "name":"[concat('ipconfig',parameters('vmConfiguration')[copyIndex()].vm_Name)]",
                  "properties":{
                     "privateIPAllocationMethod":"Dynamic",
                     "subnet":{
                        "id":"[resourceId('Microsoft.Network/virtualNetworks/subnets',parameters('virtualNetworkName'),parameters('vmConfiguration')[copyIndex()].subnetName)]"
                     }
                  }
               }
            ]
         },
         "copy":{
            "name":"nicCopy",
            "count":"[length(parameters('vmConfiguration'))]"
         }
      },
      {
         "apiVersion":"2019-07-01",
         "copy":{
            "name":"nodeCopy",
            "count":"[length(parameters('vmConfiguration'))]"
         },
         "type":"Microsoft.Compute/virtualMachines",
         "name":"[concat(parameters('vmConfiguration')[copyIndex()].vm_Name,'-vm')]",
         "location":"[resourceGroup().location]",
         "dependsOn":[
            "[resourceId('Microsoft.Storage/storageAccounts',parameters('storageAccountName'))]",
            "[resourceId('Microsoft.Network/networkInterfaces',concat(parameters('vmConfiguration')[copyIndex()].networkInterfaceName,'-nic'))]",
            "[resourceId('Microsoft.Compute/disks',concat(parameters('vmConfiguration')[copyIndex()].vm_Name,'_DataDisk_0'))]",
            "[resourceId('Microsoft.Compute/disks',concat(parameters('vmConfiguration')[copyIndex()].vm_Name,'_DataDisk_1'))]"
         ],
         "properties":{
            "hardwareProfile":{
               "vmSize":"[parameters('vmConfiguration')[copyIndex()].virtualMachineSize]"
            },
            "osProfile":{
               "computerName":"[parameters('vmConfiguration')[copyIndex()].vm_Name]",
               "adminUsername":"[parameters('vmConfiguration')[copyIndex()].adminUsername]",
               "adminPassword":"[parameters('vmConfiguration')[copyIndex()].adminPasswordOrKey]",
              "linuxConfiguration": "[if(equals(parameters('vmConfiguration')[copyIndex()].authenticationType, 'password'), json('null'), variables('linuxConfiguration'))]"
            },
            "storageProfile":{
               "imageReference":{
                  "publisher":"[parameters('vmConfiguration')[copyIndex()].publisher]",
                  "offer":"[parameters('vmConfiguration')[copyIndex()].offer]",
                  "sku":"[parameters('vmConfiguration')[copyIndex()].sku]",
                  "version":"latest"
               },
               "osDisk":{
                  "caching":"ReadWrite",
                  "createOption":"FromImage",
                  "managedDisk":{
                     "storageAccountType":"[parameters('vmConfiguration')[copyIndex()].osDiskType]"
                  }
               },
               "dataDisks":[
                  {
                     "name":"[concat(parameters('vmConfiguration')[copyIndex()].vm_Name,'_DataDisk_0')]",
                     "diskSizeGB":"[parameters('vmConfiguration')[copyIndex()].DataDisk1SizeGB]",
                     "caching":"None",
                     "lun":0,
                     "createOption":"attach",
                     "managedDisk":{
                        "id":"[resourceId('Microsoft.Compute/disks', concat(parameters('vmConfiguration')[copyIndex()].vm_Name,'_DataDisk_0'))]",
                        "storageAccountType":"StandardSSD_LRS"
                     },
                     "writeAcceleratorEnabled":false
                  },
                  {
                     "name":"[concat(parameters('vmConfiguration')[copyIndex()].vm_Name,'_DataDisk_1')]",
                     "diskSizeGB":"[parameters('vmConfiguration')[copyIndex()].DataDisk2SizeGB]",
                     "caching":"None",
                     "lun":1,
                     "createOption":"attach",
                     "managedDisk":{
                        "id":"[resourceId('Microsoft.Compute/disks', concat(parameters('vmConfiguration')[copyIndex()].vm_Name,'_DataDisk_1'))]",
                        "storageAccountType":"StandardSSD_LRS"
                     },
                     "writeAcceleratorEnabled":false
                  }
               ]
            },
            "networkProfile":{
               "networkInterfaces":[
                  {
                     "id":"[resourceId('Microsoft.Network/networkInterfaces',concat(parameters('vmConfiguration')[copyIndex()].networkInterfaceName,'-nic'))]"
                  }
               ]
            },
            "diagnosticsProfile":{
               "bootDiagnostics":{
                  "enabled":true,
                  "storageUri":"[resourceId(concat('Microsoft.Storage/storageAccounts/', parameters('storageAccountName')), '2015-06-15').primaryEndpoints.blob]"
               }
            }
         }
      }
   ],
   "outputs":{
   }
}